  :root {
    --headerOpacity: 1;
    --headerScale: 1;
  }

  .video-header {
    position: relative;
    text-align: center;
    width: 100vw;
    height: 75vh;
  }
  .video-header,
  .video-header video,
  .video-header .viewport-header {
    width: 100vw;
    height: 75vh;
    position: absolute;
    top: 0;
    left: 0;
  }
  .video-header video {
    background: #222;
    object-fit: cover;
  }
  .video-header .viewport-header {
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
    opacity: var(--headerOpacity);
    transform: scale(var(--headerScale));
  }

  .content,
  main {
    background: #222222;
    position: relative;
  }

  .rte {
    max-width: 660px;
  }

  .rte > * {
    color: #fff !important;
  }

  .rte h1 {
