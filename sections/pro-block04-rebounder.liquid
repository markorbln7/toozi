<style>
	.shane-pro-b4{
		width: 100%; padding: 5vw 5%; 
	}
	.shane-pro-b4 h2{
		margin: 0; text-align: center; font-size: 2.4vw; font-weight: 400; line-height:3.2vw;
	}
	.shane-pro-b4>.text{
		font-size: 14px; opacity: 0.6; width: 40%; margin:0.6vw auto 1vw; text-align: center; line-height:20px;
	}
    .shane-pro-b4 .shane-height-4{
      height: 5.5vw; display: flex; justify-content: center; align-items: center; line-height: 1.2vw;
    }
    .shane-pro-b4 .shane-height-3{
      height: 4.5vw; display: flex; justify-content: center; align-items: center; line-height: 1.2vw;
    }
	.b4-viewing{
		display: flex; width: 100%; justify-content: space-between; align-items: flex-start;
	}
	.b4-viewing-left{
		width: 22%; font-size: 0.9vw; line-height: 1.6vw;
	}
    .shane-pro-b4 .b4-viewing-left>div{
        justify-content: flex-start;
    }
	.b4-viewing-left>div:first-child{
		margin-top: 14.6vw;
	}
	.b4-viewing-right{
		width: 78%; text-align: center; font-size: 0.8vw; display: flex; justify-content: space-between; align-items: flex-start;
	}
	.b4-viewing-right>div{
		width: 50%; border:1px solid #ffffff;
	}
	.b4-viewing-right .active{
		border:1px solid #FF6100;
	}
	.b4-viewing-right>div>div{
		line-height: 1.6vw;
	}
	.viewing-head{
		font-size: 1.1vw; color: #fff; background-color: #ffffff; text-transform: uppercase; line-height: 2.8vw;
	}
	.viewing-img{
		height: 13vw; display: flex; align-items: center; justify-content: center;
	}
	.viewing-img img {
		height: 80%;
	}
	.viewing-title{
		font-size: 1vw; font-weight: 600;
	}
	.viewing-price{
		font-size: 1.1vw; font-weight: 600;
	}
	.viewing-cart{
		height: 2.8vw;
	}
	.viewing-cart .viewing-button{
		width: 100%; height: 100%; line-height: 2.8vw; background-color: #FF6100; color: #fff; font-size: 1.1vw; border: 0; margin: 0; padding: 0; cursor: pointer; display: none;
	}
	.b4-viewing-right .active{
		border:1px solid #FF6100;
	}
	.b4-viewing-right .active .viewing-head{
		background-color: #FF6100;
	}
	.b4-viewing-right .active .viewing-button{
		display: block;
	}
@media (max-width: 768px){
	.shane-pro-b4{
		padding: 10vw 5% 7vw;
	}
	.shane-pro-b4 h2{
		font-size: 7.2vw; line-height:8vw; width: 90%; margin: auto;
	}
	.shane-pro-b4>.text{
		width: 100%; margin:2vw auto 4vw; font-size: 4.6vw; line-height:5.4vw;
	}
    .shane-pro-b4 .shane-height-4{
      height: 20vw; line-height: 3.2vw;
    }
    .shane-pro-b4 .shane-height-3{
      height: 15vw; line-height: 3.2vw;
    }
	.b4-viewing-left{
		width: 36%; font-size: 3vw; line-height: 5vw;
	}
	.b4-viewing-left>div:first-child{
		margin-top: 36vw;
	}
     .shane-pro-b4 .b4-viewing-left>div{
        justify-content: flex-start;
    }
	.b4-viewing-right{
		width: 62%; font-size: 2.4vw; overflow-y: hidden;
	}
	.b4-viewing-right>div{
		width: 100%; flex-shrink: 0; 
	}
	.b4-viewing-right .active{
		border:1px solid #FF6100;
	}
	.b4-viewing-right>div>div{
		line-height: 3.4vw; height:5vw; display: flex; justify-content: center; align-items: center;
	}
	.viewing-head{
		font-size: 3.4vw;line-height: 8vw;
	}
	.b4-viewing-right>div>div.viewing-img{
		height: 30vw;
	}
	.viewing-img img {
		height: 80%;
	}
	.viewing-title{
		font-size: 3.2vw;
	}
	.viewing-price{
		font-size: 3.2vw;
	}
	.b4-viewing-right>div>div.viewing-cart{
		height: 8vw;
	}
    .b4-viewing-right>div>div.viewing-cart a{
		width:100%;
	}
	.viewing-cart .viewing-button{
		line-height: 8vw; font-size: 3.2vw; width:100%;
	}

}
</style>
	<h2>{{ section.settings.heading }}</h2>
	<div class="text">
		{{ section.settings.text }}
	</div>
	<div class="b4-viewing">
		<div class="b4-viewing-left">
			<div>Feature</div>
			<div>Size</div>
			<div>Suitable Age Range</div>
			<div>Weight Capacity</div>
			<div>Weight</div>
			<div class="shane-height-4">Enclosure Net</div>
			<div class="shane-height-3">Safety Padding</div>
			<div class="shane-height-3">Legs</div>
			<div class="shane-height-3">Accessories</div>
			<div class="shane-height-4">Additional Features</div>
            <div>Price</div>
		</div>
		<div class="b4-viewing-right">
          {%- assign my_variable = 0 -%} 
          {%- for block in section.blocks -%}
            {%- assign my_variable = my_variable | plus: 1 -%} 
			<div class="{% if my_variable==1 %}active{% endif %}">
				<div class="viewing-head">you are viewing</div>
				<div class="viewing-img"><img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}"></div>
				<div class="viewing-title">{{ block.settings.text01 }}</div>
				<div>{{ block.settings.text02 }}</div>
				<div>{{ block.settings.text03 }}</div>
				<div>{{ block.settings.text04 }}</div>
				<div>{{ block.settings.text05 }}</div>
				<div class="shane-height-4">{{ block.settings.text06 }}</div>
				<div class="shane-height-3">{{ block.settings.text07 }}</div>
				<div class="shane-height-3">{{ block.settings.text08 }}</div>
				<div class="shane-height-3">{{ block.settings.text09 }}</div>
				<div class="shane-height-4">{{ block.settings.text10 }}</div>
                <div class="viewing-price">{{ block.settings.text11 }}</div>
				<div class="viewing-cart">
					<a href="{{ block.settings.link }}"><input type="button" class="viewing-button" value="View More"></a>
				</div>
			</div>
          {% endfor %}
		</div>
	</div>
	<script>
		$(".b4-viewing-right>div").mouseenter(function(){
			$(".b4-viewing-right>div").removeClass("active");
			$(this).addClass("active");			
		});
	</script>
