<style>
	.shane-pro-from{
		width: 100%; padding: 5vw 5%;
	}
	.shane-pro-from .title{
		font-size: 2.8vw; width: 40%; margin: 0 auto 1vw; text-align: center; line-height: 3vw;
	}
	.shane-pro-from .context{
		font-size: 0.9vw; font-weight: 200; opacity: 0.75; width: 50%; margin: auto; text-align: center; line-height: 1.2vw;
	}
	.shane-pro-from .subtitle{
		font-size: 1.9vw; margin-bottom: 1.5vw;
	}
	.pro-from-1{
		width: 100%; display: flex; justify-content: space-between; font-size: 0.9vw; margin: 0.5vw;
	}
	.pro-from-2{
		width: 100%; font-size: 0.9vw; margin: 0.5vw;
	}
	.pro-from-1>div{
		width: 32.5%;
	}
	.shane-pro-from .entry-name{
		line-height: 2.5vw;
	}
	.shane-pro-from input{
		background-color: #ECECEC; height: 2.2vw; line-height: 2.2vw; border: 0; padding: 0 1vw; width: 100%; border-radius: 0.5vw; font-size: 1vw; outline: none; 
	}
	.shane-pro-from .from-group{
		display: flex; justify-content: space-between;  flex-wrap: wrap;
	}
	.shane-pro-from .from-group input{
		display:none;
	}
	.shane-pro-from .group-button{
		background-color: #ECECEC; height: 2.2vw; line-height: 2.2vw; text-align: center; font-size: 0.8vw; border-radius: 0.5vw; cursor: pointer;
	}
	.shane-pro-from .group-button.active{
		background-color: #FF6100; color: #fff;
	}
	.shane-pro-from .from-group .gender-button{
		width: 32%;
	}
	.shane-pro-from .from-group .habit-button{
		width: 24.5%;
	}
	.shane-pro-from input.from-submit{
		width: 12vw; height: 3vw; border-radius: 1.5vw; border:1px solid #000; font-size: 1.8vw; margin: 1vw auto; background-color: #fff;
	}
	.from-text{
		text-align: center;
	}
@media (max-width: 768px){
	.shane-pro-from{
		padding: 10vw 5%;
	}
	.shane-pro-from .title{
		font-size: 7.2vw; width: 100%; margin: 0 auto 3vw;line-height: 7.6vw;
	}
	.shane-pro-from .context{
		font-size: 3.4vw; width: 100%; margin-bottom: 2vw; line-height: 4.4vw;
	}
	.shane-pro-from .subtitle{
		font-size: 4.2vw; margin-bottom: 3vw; line-height: 5.2vw;
	}
	.pro-from-1{
		font-size: 3.4vw; margin-top: 3vw; flex-wrap: wrap;
	}
	.pro-from-2{
		font-size: 3.4vw; margin-top: 3vw;
	}
	.pro-from-1>div{
		width: 100%; margin-bottom: 2vw;
	}
	.shane-pro-from .entry-name{
		line-height: 8vw;
	}
	.shane-pro-from input{
		height: 8vw; line-height:8vw;border-radius: 1vw; font-size: 3.6vw;
	}
	.shane-pro-from .group-button{
		height: 8vw; line-height: 8vw; font-size: 3.4vw; border-radius: 1vw;
	}
	.shane-pro-from .from-group .gender-button{
		width: 32%;
	}
	.shane-pro-from .from-group .habit-button{
		width: 49%; margin-bottom: 2vw; height: 15vw; line-height: 5vw; display: flex; align-items: center; justify-content: center;
	}
	.shane-pro-from input.from-submit{
		width: 24vw; height: 8vw; border-radius: 4vw; font-size: 3.6vw; margin: 3vw auto;
	}
	.from-text{
		text-align: center; line-height: 3.4vw;
	}
}
</style>
 {% form 'contact', class: form_class %}
	<h2 class="title">{{ section.settings.heading }}</h2>
	<div class="context">{{ section.settings.text }}</div>
	<h3 class="subtitle">{{ section.settings.subheading }}</h3> 
	<div class="pro-from-1">
		<div>
			<div class="entry-name">Full Name:</div>
			<input type="text" id="contact-form-name" name="contact[name]" required>
		</div>
		<div>
			<div class="entry-name">Email Address:</div>
			<input type="email" id="contact-form-email" name="contact[email]" required>
		</div>
		<div>
			<div class="entry-name">Age:</div>
			<input type="text" id="contact-form-age" name="contact[age]">
		</div>
	</div>
	<div class="pro-from-1">
		<div>
			<div class="entry-name">Gender:</div>
			<div class="from-group">
				<input type="radio" id="contact-form-gender1" name="contact[gender]" value="Male" checked>  
				<label for="contact-form-gender1" class="group-button gender-button active">Male</label>  

				<input type="radio" id="contact-form-gender2" name="contact[gender]" value="Female">  
				<label for="contact-form-gender2" class="group-button gender-button">Female</label>  

				<input type="radio" id="contact-form-gender3" name="contact[gender]" value="Prefer not to say">  
				<label for="contact-form-gender3" class="group-button gender-button">Prefer not to say</label> 
			</div>
		</div>
		<div>
			<div class="entry-name">Height:</div>
			<input type="text" id="contact-form-height" name="contact[height]">
		</div>
		<div>
			<div class="entry-name">Weight:</div>
			<input type="text" id="contact-form-weight" name="contact[weight]">
		</div>
	</div>
	<div class="pro-from-2">
		<div class="entry-name">Exercise Habit:</div>
		<div class="from-group">
			<input type="radio" id="contact-form-habit1" name="contact[habit]" value="Little or no exercise" checked>  
			<label for="contact-form-habit1" class="group-button habit-button active">Little or no exercise</label>  

			<input type="radio" id="contact-form-habit2" name="contact[habit]" value="Light intensity exercise 1-3 days a week">  
			<label for="contact-form-habit2" class="group-button habit-button">Light intensity exercise 1-3 days a week</label>  

			<input type="radio" id="contact-form-habit3" name="contact[habit]" value="Moderate intensity exercise 3-5 days a week">  
			<label for="contact-form-habit3" class="group-button habit-button">Moderate intensity exercise 3-5 days a week</label>
			
			<input type="radio" id="contact-form-habit4" name="contact[habit]" value="High intensity exercise 6-7 days a week">  
			<label for="contact-form-habit4" class="group-button habit-button">High intensity exercise 6-7 days a week</label>  
		</div>
	</div>
	<div class="from-text"><input type="submit" class="from-submit" value="Submit"></div>
	<div class="from-text">We will contact you to learn more about your lifestyle and exercise habits.</div>
 {% endform %}
	<script>
		$('.gender-button').click(function() {
			$('.gender-button').removeClass("active");
			$(this).addClass("active");
			var input1 = $('input[name="gender"][value="' + $(this).text() + '"]');  
			input1.prop('checked', true);  
		});
		$('.habit-button').click(function() {
			$('.habit-button').removeClass("active");
			$(this).addClass("active");
			var input2 = $('input[name="habit"][value="' + $(this).text() + '"]');  
			input2.prop('checked', true);  
		});
	</script>
