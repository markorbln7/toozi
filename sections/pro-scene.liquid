			<div class="menu-title">{{ section.settings.scene_title_04 }}</div>
		</div>
		<div title="5">
			<div class="menu-line">
				<div></div>
			</div>
			<div class="menu-num">05.</div>
			<div class="menu-title">{{ section.settings.scene_title_05 }}</div>
		</div>
	</div>
	<script>
	$(document).ready(function() {
		$(".scene-menu>div").mouseenter(function(){
			var menuTitle = $(this).attr('title');
			$(".text-img .text>span").removeClass("active");
			$(".text-img .text .scene-text-" + menuTitle).addClass("active");
			$(".text-img .scene-img>img").removeClass("active");
			$(".text-img .scene-img .scene-img-" + menuTitle).addClass("active");	
		});
	})
	</script>
