<style>
  html,
  body {
    position: relative;
    height: 100%;
  }

  body {
    background: #eee;
    font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
    font-size: 14px;
    color: #000;
    margin: 0;
    padding: 0;
  }

  .swiper {
    width: 100%;
    height: 100%;
  }

  .swiper-slide {
    text-align: center;
    font-size: 18px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .swiper-slide .item {
    background: #000;
    color: #fff;
    text-align: left;
  }

  .swiper-slide-active .item {
    background: #eb701f;
  }

  .reviews-container {
    margin-left: 13.5rem;
  }

  .swiper-button-next::after,
  .swiper-button-prev::after {
    content: '' !important;
  }

  .swiper-nav .swiper-button-disabled {
    background: #fff !important;
    opacity: 1 !important;
  }

  .swiper-nav .swiper-button-disabled svg {
    fill: grey !important;
  }

  .swiper-pagination-bullet {
    width: 20px !important;
    height: 3px !important;
    border-radius: 0 !important;
    background: lightgrey !important;
  }

  .swiper-pagination-bullet-active {
    background: gray !important;
  }

  .swiper-nav {
    width: 120px;
    z-index: 0;
  }

  .swiper-button-next,
  .swiper-button-prev {
    background: #eb701f;
    border-radius: 50px;
    width: 45px !important;
    height: 45px !important;
  }

  .swiper-button-next svg,
  .swiper-button-prev svg {
    width: 30px !important;
    height: auto !important;
    fill: #fff;
  }

  @media screen and (max-width: 749px) {
    .reviews-container {
      margin-left: 2rem;
    }
  }
</style>

<div class="content py-5 my-5" id="reviews">
  <div class="container text-light py-5">
    <div class="row position-relative">
      <h3>{{ section.settings.title }}</h3>
      <div class="d-flex align-items-center gap-3 border-bottom border-white text-start mb-5">
        <h3>{{ section.settings.review_star }}</h3>
        {% render 'star-rating', review_star: section.settings.review_star %}
        <span class="text-black-10"
          ><u>{{ section.settings.total_reviews }} reviews</u></span
        >
      </div>
      <div class="swiper-nav position-absolute top-0 end-0">
        <div class="swiper-button-prev">
          <svg width="25" height="25" viewBox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg">
