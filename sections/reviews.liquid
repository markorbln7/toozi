          </svg>
        </div>
      </div>
    </div>
  </div>
  <div class="reviews-container text-light">
    <div class="row">
      <div class="swiper mySwiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="item p-3 p-md-5 rounded-3">
                <h5>{{ block.settings.author }}</h5>
                {% render 'star-rating', review_star: block.settings.review_star %}
                {{ block.settings.paragraph }}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="swiper-paginations text-center"></div>
  </div>
</div>

<script>
  var swiper = new Swiper('.mySwiper', {
    pagination: {
      el: '.swiper-paginations',
      clickable: true,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    breakpoints: {
      640: {
        slidesPerView: 2.5,
        spaceBetween: 30,
      },
      320: {
        slidesPerView: 1.2,
        spaceBetween: 10,
      },
    },
  });
</script>
{% schema %}
{
  "name": "Reviews",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section name"
    },
    {
      "type": "text",
      "id": "review_star",
      "label": "Star rating",
      "info": "1 to 5"
    },
    {
      "type": "text",
      "id": "total_reviews",
      "label": "Total reviews"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "text",
          "id": "author",
          "label": "Author"
        },
        {
          "type": "richtext",
          "id": "paragraph",
          "label": "Paragraph"
        },
        {
          "type": "number",
          "id": "review_star",
          "label": "Star rating",
          "info": "1 to 5"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reviews"
    }
  ]
}
{% endschema %}
