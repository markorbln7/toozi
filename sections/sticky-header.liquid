<script>
  document.addEventListener('DOMContentLoaded', function () {
    let miniCart = document.querySelector('.header__action-item--cart');
    let newHeader = document.querySelector('.rightheader');
    let navbar = document.querySelector('.right-mobile');

    function handleResize() {
      if (window.innerWidth <= 768) {
        if (!navbar.contains(miniCart)) {
          navbar.append(miniCart);
        }
      } else {
        if (!newHeader.contains(miniCart)) {
          newHeader.append(miniCart);
        }
      }
    }

    handleResize();
    window.addEventListener('resize', handleResize);
  });
</script>

